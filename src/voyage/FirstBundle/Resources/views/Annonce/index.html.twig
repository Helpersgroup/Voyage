                                        <span class="border"></span>
                                    </div>
                                </div>


                                <div class="row" id="project-container">
                                           
                               {% for entity in entities %} 
                                     {% set verif = 0 %}
                                    {% for hh in h %}
                                        
                                        {%  if  entity.id_Annonce==hh.id_Annonce %}
                                        <div class="span3 offer element branding">
                                            {% set verif = 1 %}
                                        {% endif%}
                                    {% endfor %}
                                                
                                    {% for pp in p %}
                                        {%  if  entity.id_Annonce==pp.id_Annonce and verif!=1 %}
                                        <div class="span3 offer element price"> 
                                            {% set verif = 1 %}
                                                
                                        {% endif%}
                                    {% endfor %}
                                     {% for nn in n %}
                                        
                                        {%  if  entity.id_Annonce==nn.id_Annonce and verif!=1 %}
                                        <div class="span3 offer element star"> 
                                            {% set verif = 1 %}
                                        {% endif%}
                                    {% endfor %}
                                    {% for cc in c %}
                                        
                                        {%  if  entity.id_Annonce==cc.id_Annonce and verif!=1%}
                                        <div class="span3 offer element rate">
                                            {% set verif = 1 %}
                                        {% endif%}
                                    {% endfor %} 
                                      {%  if  verif==0 %}
                                        <div class="span3 offer element">
                                        {% endif%}           

                                             
                                             
                                        
                                        <figure>
                                            <img src="{{asset('bundles/voyage/images/offerpic-1.png')}}"  alt="Offer Image">
                                            <div class="overlay">
                                                <a href="#" class="like"></a>
                                            </div>
                                        </figure>
                                        <article>
                                            <h3>{{entity.nom}}</h3>
                                            <h4>{{entity.destination}}</h4>
                                            <p><a href="#" class="active"></a>
                                                <a href="#" class="active"></a>
