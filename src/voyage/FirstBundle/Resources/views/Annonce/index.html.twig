                                        </article>
                                        <div class="price">
                                            <h3>{{entity.prix}}</h3>
                                            <a href="{{ path('annonce_show', { 'id': entity.id_Annonce }) }}"></a>
                                        </div>
                                    </div>

                                    

                                  {% endfor %}

                                   

                                   
                                   
                                    

                                   

                                   
