{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{%block contains%}
<link href="{{asset('bundles/voyage/css2/st.css')}}" rel="stylesheet" type="text/css" media="all" />

<br>
<center>

{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}
     <br> 
      <br> 
	<h2>Connexion</h2>
             <br>           
<form action="{{ path("fos_user_security_check") }}" method="post">
 


   <label for="username">{{ 'security.login.username'|trans }}</label>
    <input class="text-box-dark" type="text" id="username" name="_username" value="{{ last_username }}" required="required" onblur="if (this.value == '') {this.value = 'Username';}"/>

        <br>
 <label for="password">{{ 'security.login.password'|trans }}</label>
    <input class="text-box-dark" type="text" id="password" name="_password" required="required"onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}" />

    
<div class="payment-sendbtns">
   
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

</div>

</form>
        </center>

{%endblock contains%}
